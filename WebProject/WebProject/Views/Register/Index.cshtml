@model EntityLayer.Concrete.Writer
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Register Now</h3>
        <div class="inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                @using (Html.BeginForm("Index", "Register", FormMethod.Post, new {enctype = "multipart/form-data"}))
                {
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom01">First name</label>
                            @Html.TextBoxFor(x => x.WriterName, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterName)
                            @*<input type="text" class="form-control" id="validationDefault01" name="WriterName" placeholder="" required="">*@
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="validationCustom02">E-Mail</label>
                            @Html.TextBoxFor(x => x.WriterMail, new {@class = "form-control"})
                            @Html.ValidationMessageFor(x => x.WriterMail)
                            @*<input type="email" class="form-control" id="validationDefault02" name="WriterMail" placeholder="" required="">*@
                        </div>

                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword1 mb-2">Password</label>
                            <input type="password" class="form-control" id="password2" name="WriterPassword" placeholder="" required="">
                            @Html.ValidationMessageFor(x => x.WriterPassword, "", new {@class = "text-danger"})
                            @*<input type="password" class="form-control" id="password1" name="WriterPassword" placeholder="" required="">*@
                        </div>
                        <div class="form-group col-md-6">
                            <label for="exampleInputPassword2 mb-2">Confirm Password</label>
                            <input type="password" class="form-control" id="password2" name="ConfirmPassword" placeholder="" required="">
                            @ViewBag.Problem
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label for="exampleInputPassword1 mb-2">Select City</label>
                            @Html.DropDownListFor(x => x.WriterCity, (List<SelectListItem>) ViewBag.Cities, new {@class = "form-control dropdown"})
                        </div>
                        <div class="form-group col-md-12">
                            <label>Your Image</label>
                            <input type="file" name="WriterImage" class="form-control"/>
                            @Html.ValidationMessageFor(x => x.WriterImage)

                        </div>
                        <div class="form-group col-md-12">
                            <label for="exampleTextarea1">About</label>
                            @Html.TextBoxFor(x => x.WriterAbout, new {@id = "editor1"})
                            @Html.ValidationMessageFor(x => x.WriterAbout)
                        </div>
                    </div>


                    <button type="submit" class="btn btn-primary submit mb-4">Register</button>
                    <p>
                        <a href="#" id="btn1">By clicking Signup, I agree to your terms</a>
                    </p>
                }

            </div>
        </div>
    </div>
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('editor1');
    </script>
    <script>
        $('#btn1').click(function () {
            swal("Thank you for reading!", "We are gived information for your e-mail!", "info");

        });
    </script>
</section>
