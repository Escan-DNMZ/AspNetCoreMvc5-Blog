
<script src="https://code.jquery.com/jquery-3.5.1.min.js" type="text/javascript"></script>


<div class="tech-btm">
    <h4>Sign up to our newsletter</h4>
    <p>Pellentesque dui, non felis. Maecenas male </p>
    <form method="post" id="subForm">
        <input type="email" placeholder="Email" required="" name="Mail">
        <input id="btn" name="submit" type="submit" value="Subscribe">
        
    </form>

</div>

<script type="text/javascript">
    $(function () {
        $("#btn").click(function (e) {
            var bolum = document.createElement("div");
            bolum.className = "alert alert-success";
            document.body.appendChild(bolum);
            e.preventDefault();
            var veri = $("#subForm").serialize();
            $.ajax({
                type: "post",
                url: "/Newsletter/SubscribeMail/",
                data: veri,
                success: function (f) {
                    $("#result").html(bolum);
                    setTimeout(() => { window.location.reload() }, 100);
                }
            });
        });
    });
</script>