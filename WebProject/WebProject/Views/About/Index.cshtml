 @using EntityLayer.Concrete
@model List<About>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">About Us</h3>
        <div class="row inner-sec">
            <!--left-->
            <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                @foreach (var item in Model)
                {
                    <div class="blog-grid-top">

                        <div class="blog_info_left_grid">
                            <a href="/About/ReadMore">
                                <img src="@item.AboutImage1" class="img-fluid" alt="">
                            </a>
                        </div>
                        <h3>About Us</h3>

                        <p>
                            @item.AboutDetails1
                        </p>

                        <a href="/About/ReadMore" class="btn btn-primary read-m">Read More</a>
                    </div>
                }

            </div>
            <!--//left-->
            <!--right-->
            <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                <div class="right-blog-info text-left">
                    <div class="tech-btm">
                        <img src="images/banner1.jpg" class="img-fluid" alt="">
                    </div>

                    @await Html.PartialAsync("~/Views/NewsLetter/SubscribeMail.cshtml")

                    @await Html.PartialAsync("~/Views/About/SocialMediaAbout.cshtml")



                    
                <div class="tech-btm">
                    <h4>Recent Posts</h4>

                    @await Component.InvokeAsync("Last3Blogs")

                </div>
                </div>

            </aside>
            <!--//right-->
        </div>
    </div>
</section>
